@model LoginViewModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center"
     style="background: #F3F4F6;">

    <div class="card shadow-lg border-0 rounded-4" style="max-width: 420px; width: 100%;">
        <div class="card-body p-5">

            <h3 class="text-center mb-2 fw-bold" style="color:#1E40AF;">Bienvenido</h3>
            <p class="text-center text-muted mb-4">Ingresa a tu cuenta para continuar</p>

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Email"
                           class="form-control shadow-sm rounded-3"
                           style="border:1px solid #CBD5E1;" placeholder="correo@ejemplo.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Password" type="password"
                           class="form-control shadow-sm rounded-3"
                           style="border:1px solid #CBD5E1;" placeholder="Contraseña" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label text-secondary small"></label>
                </div>

                <button type="submit"
                        class="btn w-100 py-2 fw-semibold rounded-3 shadow-sm"
                        style="background:#2563EB; color:white;">
                    Entrar
                </button>
            </form>

            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index"
                   class="text-decoration-none fw-semibold"
                   style="color:#2563EB;">
                    Volver al inicio
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
