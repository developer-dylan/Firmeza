@model LoginViewModel
@{
ViewData["Title"] = "Iniciar sesión";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-gradient"
     style="background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);">

    <div class="card shadow-lg border-0 rounded-4" style="max-width: 420px; width: 100%;">
        <div class="card-body p-5">
            <h3 class="text-center mb-4 fw-bold text-primary">Iniciar sesión</h3>
            <p class="text-center text-muted mb-4">Accede a tu cuenta con tus credenciales</p>

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Email" class="form-control border-primary border-opacity-25 rounded-3 shadow-sm" placeholder="correo@ejemplo.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Password" type="password" class="form-control border-primary border-opacity-25 rounded-3 shadow-sm" placeholder="Contraseña" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label text-secondary small"></label>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold rounded-3 shadow-sm">
                    Entrar
                </button>
            </form>

            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-primary fw-semibold">
                    Volver al inicio
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}