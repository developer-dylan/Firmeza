@model Firmezaa.Web.Models.Entities.SaleDetail

@{
    ViewData["Title"] = "Add Sale Detail";
}

<div class="container py-5">

    <h2 class="fw-bold text-warning mb-4">Add Sale Detail</h2>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">

            <form asp-action="Create" method="post" class="row g-3">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- SALE -->
                <div class="col-md-6">
                    <label asp-for="SaleId" class="form-label fw-semibold">Sale</label>
                    <select asp-for="SaleId" class="form-select rounded-3" asp-items="ViewBag.SaleId">
                        <option value="">-- Select a Sale --</option>
                    </select>
                    <span asp-validation-for="SaleId" class="text-danger small"></span>
                </div>

                <!-- PRODUCT -->
                <div class="col-md-6">
                    <label asp-for="ProductId" class="form-label fw-semibold">Product</label>
                    <select asp-for="ProductId" class="form-select rounded-3" asp-items="ViewBag.ProductId">
                        <option value="">-- Select a Product --</option>
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger small"></span>
                </div>

                <!-- QUANTITY -->
                <div class="col-md-6">
                    <label asp-for="Quantity" class="form-label fw-semibold"></label>
                    <input asp-for="Quantity" class="form-control rounded-3" />
                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                </div>

                <!-- UNIT PRICE -->
                <div class="col-md-6">
                    <label asp-for="UnitPrice" class="form-label fw-semibold"></label>
                    <input asp-for="UnitPrice" class="form-control rounded-3" />
                    <span asp-validation-for="UnitPrice" class="text-danger small"></span>
                </div>

                <!-- SUBMIT -->
                <div class="col-12 d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-warning text-dark fw-semibold px-4 rounded-3 shadow-sm">
                        Add Detail
                    </button>
                </div>

            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="text-decoration-none text-warning fw-semibold">
            ‚Üê Back to Details
        </a>
    </div>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
