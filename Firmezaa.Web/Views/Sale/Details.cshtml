@model Firmezaa.Web.Models.Entities.SaleDetail

@{
    ViewData["Title"] = "Sale Detail";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center" style="background:#F8FAFC;">

    <div class="card shadow-lg border-0 rounded-4 w-100" style="max-width: 700px;">
        <div class="card-body p-5">

            <h2 class="fw-bold text-center mb-4" style="color:#4F46E5;">Sale Detail</h2>

            <div class="bg-white rounded-4 p-4 shadow-sm border">
                <dl class="row mb-0">

                    <dt class="col-sm-4 fw-semibold text-secondary">Sale ID</dt>
                    <dd class="col-sm-8">@Model.Sale.Id</dd>

                    <dt class="col-sm-4 fw-semibold text-secondary">Product</dt>
                    <dd class="col-sm-8">@Model.Product.Name</dd>

                    <dt class="col-sm-4 fw-semibold text-secondary">Quantity</dt>
                    <dd class="col-sm-8">@Model.Quantity</dd>

                    <dt class="col-sm-4 fw-semibold text-secondary">Unit Price</dt>
                    <dd class="col-sm-8">@Model.UnitPrice.ToString("C")</dd>

                    <dt class="col-sm-4 fw-semibold text-secondary">Subtotal</dt>
                    <dd class="col-sm-8">@Model.Subtotal.ToString("C")</dd>

                </dl>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-3 fw-semibold px-4">
                    Back
                </a>

                <a asp-action="Edit" asp-route-id="@Model.Id"
                   class="btn text-white fw-semibold rounded-3 px-4 shadow-sm"
                   style="background:#4F46E5;">
                    Edit
                </a>
            </div>

        </div>
    </div>
</div>
