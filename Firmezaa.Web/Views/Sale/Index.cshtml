@model IEnumerable<Firmezaa.Web.Models.Entities.SaleDetail>

@{
    ViewData["Title"] = "Sale Details";
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0" style="color:#4F46E5;">Sale Details</h2>

        <a asp-action="Create"
           class="btn text-white fw-semibold px-4 rounded-3 shadow-sm"
           style="background:#4F46E5;">
            + Add Detail
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4 bg-white">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead style="background:#E0E7FF;">
                        <tr>
                            <th>Sale ID</th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Subtotal</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-muted py-4">
                                    No sale details found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Sale.Id</td>
                                    <td>@item.Product.Name</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("C")</td>
                                    <td>@item.Subtotal.ToString("C")</td>

                                    <td>
                                        <div class="d-flex justify-content-center gap-2">

                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-primary fw-semibold rounded-3">
                                                Edit
                                            </a>

                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-secondary fw-semibold rounded-3">
                                                Details
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-danger fw-semibold rounded-3">
                                                Delete
                                            </a>

                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</div>
