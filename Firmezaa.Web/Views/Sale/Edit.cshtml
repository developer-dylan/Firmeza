@model Firmezaa.Web.Models.Entities.SaleDetail

@{
    ViewData["Title"] = "Edit Sale Detail";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center" style="background:#F8FAFC;">

    <div class="card shadow-lg border-0 rounded-4 w-100" style="max-width: 650px;">
        <div class="card-body p-5">

            <h2 class="fw-bold text-center mb-4" style="color:#4F46E5;">Edit Sale Detail</h2>

            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                <div class="mb-3">
                    <label asp-for="SaleId" class="form-label fw-semibold text-secondary"></label>
                    <select asp-for="SaleId" class="form-select rounded-3 shadow-sm border-primary border-opacity-50"
                            asp-items="ViewBag.SaleId"></select>
                    <span asp-validation-for="SaleId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductId" class="form-label fw-semibold text-secondary"></label>
                    <select asp-for="ProductId" class="form-select rounded-3 shadow-sm border-primary border-opacity-50"
                            asp-items="ViewBag.ProductId"></select>
                    <span asp-validation-for="ProductId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Quantity" class="form-control rounded-3 shadow-sm border-primary border-opacity-50" />
                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UnitPrice" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="UnitPrice" class="form-control rounded-3 shadow-sm border-primary border-opacity-50" />
                    <span asp-validation-for="UnitPrice" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index"
                       class="btn btn-outline-secondary rounded-3 fw-semibold px-4">
                        Back
                    </a>

                    <button type="submit"
                            class="btn text-white fw-semibold rounded-3 px-4 shadow-sm"
                            style="background:#4F46E5;">
                        Save Changes
                    </button>
                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
