@{
    ViewData["Title"] = "Cargar productos desde Excel";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100"
     style="background:#F3F4F6;">

    <div class="card shadow-lg border-0 rounded-4 w-100" style="max-width: 600px;">
        <div class="card-body p-5">

            <h2 class="fw-bold text-center mb-3" style="color:#1E40AF;">Cargar productos desde Excel</h2>
            <p class="text-center text-muted mb-4">
                Sube un archivo Excel con las columnas:
                <strong>Name, Price, Quantity, Category</strong>.
            </p>

            <form asp-action="Upload" method="post" enctype="multipart/form-data" class="text-center">

                <div class="mb-4">
                    <input type="file" name="file" accept=".xlsx,.xls"
                           class="form-control form-control-lg rounded-3 shadow-sm"
                           style="border:1px solid #CBD5E1;" />
                </div>

                <button type="submit"
                        class="btn fw-semibold rounded-3 px-4 shadow-sm"
                        style="background:#2563EB; color:white;">
                    Subir archivo
                </button>

                <a asp-controller="Products" asp-action="Index"
                   class="btn btn-outline-secondary fw-semibold rounded-3 px-4 ms-2">
                    Volver
                </a>
            </form>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success mt-4" role="alert">
                    @TempData["Message"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-4" role="alert">
                    @TempData["Error"]
                </div>
            }

            <div class="text-center mt-4">
                <a asp-action="GenerateTemplate"
                   class="text-decoration-none fw-semibold"
                   style="color:#2563EB;">
                    📥 Descargar plantilla Excel
                </a>
            </div>
        </div>
    </div>
</div>
