@{
    ViewData["Title"] = "Cargar productos desde Excel";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100 bg-gradient"
     style="background: linear-gradient(135deg, #f9d976 0%, #f39c12 100%);">

    <div class="card shadow-lg border-0 rounded-4 w-100" style="max-width: 600px;">
        <div class="card-body p-5">

            <h2 class="fw-bold text-center text-dark mb-3">Cargar productos desde Excel</h2>
            <p class="text-center text-muted mb-4">
                Sube un archivo Excel con las columnas:
                <strong>Name, Price, Quantity, Category</strong>.
            </p>

            <form asp-action="Upload" method="post" enctype="multipart/form-data" class="text-center">
                <div class="mb-4">
                    <input type="file" name="file" accept=".xlsx,.xls"
                           class="form-control form-control-lg rounded-3 border-warning shadow-sm" />
                </div>

                <button type="submit" class="btn btn-warning text-dark fw-semibold rounded-3 px-4 shadow-sm">
                    Subir Excel
                </button>

                <a asp-controller="Product" asp-action="Index"
                   class="btn btn-outline-secondary fw-semibold rounded-3 px-4 ms-2">
                    Volver
                </a>
            </form>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success mt-4" role="alert">
                    @TempData["Message"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-4" role="alert">
                    @TempData["Error"]
                </div>
            }

            <div class="text-center mt-4">
                <a asp-action="GenerateTemplate" class="text-decoration-none fw-semibold text-warning">
                    📥 Descargar plantilla Excel
                </a>
            </div>
        </div>
    </div>
</div>