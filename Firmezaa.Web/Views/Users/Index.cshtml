@model IEnumerable<Firmezaa.Web.Models.Entities.User>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold" style="color:#4F46E5;">Gestión de Usuarios</h2>

        <a asp-action="Create"
           class="btn text-white fw-semibold px-4 rounded-3 shadow-sm"
           style="background:#4F46E5;">
            + Nuevo Usuario
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">

            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead style="background:#E0E7FF;">
                        <tr>
                            <th>Nombre</th>
                            <th>Documento</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                            <th>Fecha Registro</th>
                            <th>Usuario</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>

                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-muted py-4">
                                    No hay usuarios registrados.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FullName</td>
                                    <td>@item.DocumentNumber</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.RegisterDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.UserName</td>

                                    <td class="d-flex justify-content-center gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            Editar
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary">
                                            Detalles
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>

                </table>
            </div>

        </div>
    </div>
</div>
