@model Firmezaa.Web.ViewModels.Users.CreateUserViewModel

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100" style="background:#EEF2FF;">

    <div class="card shadow-lg border-0 rounded-4 w-100" style="max-width: 750px;">
        <div class="card-body p-5">

            <h2 class="fw-bold text-center mb-3" style="color:#4F46E5;">Registrar Nuevo Usuario</h2>
            <p class="text-center text-muted mb-4">Completa los datos para crear un usuario en el sistema.</p>

            <form asp-action="Create" method="post" class="row g-3">

                <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                <div class="col-md-6">
                    <label asp-for="FullName" class="form-label fw-semibold"></label>
                    <input asp-for="FullName" class="form-control rounded-3 shadow-sm" />
                    <span class="text-danger small" asp-validation-for="FullName"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DocumentNumber" class="form-label fw-semibold"></label>
                    <input asp-for="DocumentNumber" class="form-control rounded-3 shadow-sm" />
                    <span asp-validation-for="DocumentNumber" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control rounded-3 shadow-sm" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label fw-semibold"></label>
                    <input asp-for="Phone" class="form-control rounded-3 shadow-sm" />
                    <span asp-validation-for="Phone" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Age" class="form-label fw-semibold"></label>
                    <input asp-for="Age" class="form-control rounded-3 shadow-sm" />
                    <span asp-validation-for="Age" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="UserName" class="form-label fw-semibold"></label>
                    <input asp-for="UserName" class="form-control rounded-3 shadow-sm" />
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" type="password" class="form-control rounded-3 shadow-sm" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="col-12 d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary fw-semibold rounded-3 px-4">Volver</a>
                    <button type="submit"
                            class="btn text-white fw-semibold px-4 rounded-3 shadow-sm"
                            style="background:#4F46E5;">
                        Crear Usuario
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
