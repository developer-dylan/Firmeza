@model Firmezaa.Web.Models.Entities.User

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center"
     style="background:#F3F4F6;">

    <div class="card shadow-lg border-0 rounded-4 w-100" style="max-width: 650px;">
        <div class="card-body p-5">

            <h2 class="fw-bold text-center mb-3" style="color:#DC2626;">Eliminar Usuario</h2>
            <p class="text-center text-muted">
                Esta acción no se puede deshacer.
            </p>

            <div class="alert alert-danger fw-semibold rounded-3 shadow-sm p-3 mb-4">
                ¿Estás seguro de que deseas eliminar este usuario?
            </div>

            <div class="bg-white p-4 rounded-4 shadow-sm border mb-4">
                <dl class="row mb-0">
                    <dt class="col-sm-4 fw-semibold text-secondary">Nombre</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>

                    <dt class="col-sm-4 fw-semibold text-secondary">Documento</dt>
                    <dd class="col-sm-8">@Model.DocumentNumber</dd>

                    <dt class="col-sm-4 fw-semibold text-secondary">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                </dl>
            </div>

            <form asp-action="Delete" method="post" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Id" />

                <a asp-action="Index" class="btn btn-outline-secondary rounded-3 px-4">
                    Cancelar
                </a>

                <button type="submit" class="btn text-white rounded-3 px-4 shadow-sm fw-semibold"
                        style="background:#DC2626;">
                    Eliminar Usuario
                </button>
            </form>

        </div>
    </div>
</div>
