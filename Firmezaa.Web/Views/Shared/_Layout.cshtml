﻿<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Firmezaa.Web</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    FIRMEZAA
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">

                    <ul class="navbar-nav flex-grow-1">

                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item d-flex align-items-center me-3">
                                <button type="button" onclick="history.back()" class="btn-back">
                                    Volver
                                </button>
                            </li>

                            <li class="nav-item me-3">
                                <a class="nav-link" asp-controller="Products" asp-action="Index">Products</a>
                            </li>

                            <li class="nav-item me-3">
                                <a class="nav-sales-btn" asp-controller="Sales" asp-action="Index">Sales</a>
                            </li>

                            <li class="nav-item me-3">
                                <a class="nav-link" asp-controller="Users" asp-action="Index">Users</a>
                            </li>

                            <li class="nav-item d-flex align-items-center">
                                <span class="nav-link text-dark">Hola, @User.Identity.Name</span>
                            </li>

                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="btn btn-link nav-link text-danger fw-semibold">
                                        Salir
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>


                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="app-footer">
        &copy; 2025 - Firmezaa.Web |
        <a asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>