@model Firmezaa.Web.Models.Entities.Product

@{
    ViewData["Title"] = "Editar producto";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center" style="background:#EEF2FF;">

    <div class="card shadow-lg border-0 rounded-4 w-100" style="max-width: 650px;">
        <div class="card-body p-5">

            <h2 class="fw-bold text-center mb-3" style="color:#4F46E5;">Editar producto</h2>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">

                    <div class="col-12">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control rounded-3 shadow-sm" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label fw-semibold"></label>
                        <input asp-for="Price" class="form-control rounded-3 shadow-sm" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Quantity" class="form-label fw-semibold"></label>
                        <input asp-for="Quantity" class="form-control rounded-3 shadow-sm" />
                    </div>

                    <div class="col-12">
                        <label asp-for="Category" class="form-label fw-semibold"></label>
                        <input asp-for="Category" class="form-control rounded-3 shadow-sm" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Creado</label>
                        <input class="form-control" value="@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")" readonly />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Última actualización</label>
                        <input class="form-control" value="@Model.UpdatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")" readonly />
                    </div>

                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary fw-semibold rounded-3 px-4">
                        Cancelar
                    </a>
                    <button type="submit" class="btn text-white fw-semibold rounded-3 px-4 shadow-sm"
                            style="background:#4F46E5;">
                        Guardar cambios
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>
