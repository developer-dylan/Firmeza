@model IEnumerable<Firmezaa.Web.Models.Entities.Product>

@{
    ViewData["Title"] = "Productos";
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-warning mb-0">Inventario de Productos</h2>

        <div class="d-flex gap-2">
            <form asp-controller="Excel" asp-action="Upload" method="post" enctype="multipart/form-data" id="excelForm">
                <input type="file" name="file" id="excelInput" class="d-none" accept=".xlsx,.xls" />
                <button type="button" class="btn btn-outline-warning text-dark fw-semibold rounded-3 px-4" onclick="document.getElementById('excelInput').click()">
                    Cargar Excel
                </button>
            </form>

            <a asp-action="Create" class="btn btn-warning text-dark shadow-sm px-4 fw-semibold rounded-3">+ Nuevo</a>
        </div>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4 bg-white">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-warning">
                    <tr>
                        <th>Nombre</th>
                        <th>Precio ($)</th>
                        <th>Cantidad</th>
                        <th>Categoría</th>
                        <th>Creado</th>
                        <th>Actualizado</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>

                    <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-muted py-4">No hay productos registrados.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Name</td>
                                <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("es-CO"))</td>
                                <td>@item.Quantity</td>
                                <td>@item.Category</td>

                                <td>@item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@(item.UpdatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm") ?? "Nunca")</td>

                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Editar</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detalles</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const excelInput = document.getElementById("excelInput");
        const excelForm = document.getElementById("excelForm");

        excelInput.addEventListener("change", function () {
            if (this.files.length > 0) {
                excelForm.submit();
            }
        });
    </script>
}
