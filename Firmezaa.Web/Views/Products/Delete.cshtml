@model Firmezaa.Web.Models.Entities.Product

@{
    ViewData["Title"] = "Eliminar producto";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100"
     style="background:#F3F4F6;">

    <div class="card shadow-lg border-0 rounded-4 w-100" style="max-width: 600px;">
        <div class="card-body p-5">

            <h2 class="fw-bold text-center mb-3" style="color:#DC2626;">
                Eliminar producto
            </h2>

            <p class="text-center text-muted mb-4">
                ¿Estás seguro de que deseas eliminar este producto? Esta acción no se puede deshacer.
            </p>

            <div class="bg-white rounded-4 p-4 shadow-sm mb-4" style="border:1px solid #E5E7EB;">
                <dl class="row mb-0">

                    <dt class="col-sm-4 fw-semibold text-secondary">Nombre</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4 fw-semibold text-secondary">Precio</dt>
                    <dd class="col-sm-8">@Model.Price</dd>

                    <dt class="col-sm-4 fw-semibold text-secondary">Cantidad</dt>
                    <dd class="col-sm-8">@Model.Quantity</dd>

                    <dt class="col-sm-4 fw-semibold text-secondary">Categoría</dt>
                    <dd class="col-sm-8">@Model.Category</dd>

                </dl>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index"
                       class="btn btn-outline-secondary fw-semibold rounded-3 px-4">
                        Cancelar
                    </a>

                    <button type="submit"
                            class="btn fw-semibold rounded-3 px-4 shadow-sm"
                            style="background:#DC2626; color:white;">
                        Eliminar
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
